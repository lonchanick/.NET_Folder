@model Book


<form method="post">
    @* <input asp-for="Id" hidden /> *@
    <div class="boder p-3 mb-4">
        <div class="row pb-2">
            <h2 class="text-primary">Book Details</h2>
            <hr />
        </div>

        @* muestra todas las validaciones *@
        <div asp-validation-summary="All" class="text-bg-warning"></div>

        @* muestra solo las validaciones de los campos del modelo e.g. Name y CategoryDisplay *@
        @* <div asp-validation-summary="ModelOnly"></div> *@

        @* en este caso no muestra nada *@
        @* <div asp-validation-summary="None"></div> *@

        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" type="text" class="form-control" disabled/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" type="texarea" class="form-control" disabled ></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" type="text" class="form-control" disabled />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Author"></label>
            <input asp-for="Author" type="text" class="form-control" disabled />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ListPrice"></label>
            <input asp-for="ListPrice" type="text" class="form-control" disabled />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="text" class="form-control" disabled />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price50"></label>
            <input asp-for="Price50" type="text" class="form-control" disabled />
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price100"></label>
            <input asp-for="Price100" type="text" class="form-control" disabled />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>
        <div class="row">
            
            <div class="col-6 col-md-3">
                <a class="btn btn-outline-secondary form-control" asp-controller="Book" asp-action="Index">
                    <i class="bi bi-arrow-left-circle"></i>Back
                </a>
            </div>

        </div>
    </div>
</form>

@* esto en caso de querer importar scripts para validacion del client side.
    Si esta partial view no fuera para importar scripts podria llamarse
    directamente dentro del cuerpo de la view "<partial name="_validationScriptsPartial" />"
    default location for any partialView is Shared folder
*@
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}