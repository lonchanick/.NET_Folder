 
@model List<Book>;

@{
    ViewData["Title"] = "Book";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6"><h2 class="text-primary">Books</h2></div>
        <div class="col-6 text-end">
            <a asp-controller="book" asp-action="Upsert" class="btn btn-primary rounded-2">
                <i class="bi bi-plus-circle-fill"></i> New
            </a>
        </div>
    </div>

    <table id="tblData" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>List Price</th>
                <th>Category</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/Book.js"></script>
}




