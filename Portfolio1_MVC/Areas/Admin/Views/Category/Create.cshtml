@model Category


<form method="post">
    @* <input asp-for="Id" hidden /> *@
    <div class="boder p-3 mb-4" >
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>

        @* muestra todas las validaciones *@
        <div asp-validation-summary="All" class="text-bg-warning"></div>

        @* muestra solo las validaciones de los campos del modelo e.g. Name y CategoryDisplay *@
        @* <div asp-validation-summary="ModelOnly"></div> *@

        @* en este caso no muestra nada *@
        @* <div asp-validation-summary="None"></div> *@
        <div class="mb-3">

            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" type="text" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Submit</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-outline-secondary form-control" asp-controller="Category" asp-action="Index">
                    <i class="bi bi-arrow-left-circle"></i>Back
                </a>
            </div>
            
        </div>
    </div>
</form>

@* esto en caso de querer importar scripts para validacion del client side.
    Si esta partial view no fuera para importar scripts podria llamarse
    directamente dentro del cuerpo de la view "<partial name="_validationScriptsPartial" />"
    default location for any partialView is Shared folder
*@
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}