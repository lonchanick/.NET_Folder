@model Category

<form method="post">
    @* <input asp-for="Id" hidden /> *@
    <div class="boder p-3 mb-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
 
        <div class="mb-3">

            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" type="text" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger rounded-1 form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-outline-secondary form-control rounded"  asp-controller="Category" asp-action="Index">
                    <i class="bi bi-arrow-left-circle"></i>Back
                </a>
            </div>
        </div>
    </div>
</form>

 