
@model List<Category>;

@{
    ViewData["Title"] = "Category";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6"><h2 class="text-primary">Category</h2></div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary rounded-2">
                <i class="bi bi-plus-circle-fill"></i> New
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                @* <th>Categoty Id</th> *@
                <th>Categoty Name</th>
                <th>Display</th>
                <th></th>
            </tr>
        </thead>
    
        <tbody>
            @foreach (var cat in Model.OrderBy(c => c.DisplayOrder))
            {
                <tr>
                    @* <td>@cat.Id</td> *@
                    <td>@cat.Name</td>
                    <td>@cat.DisplayOrder</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-danger mx-2 rounded-1">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-primary mx-2 rounded-1">
                                <i class="bi bi-pen"></i> Edit
                            </a>
                            <a asp-controller="Category" asp-action="Details" class="btn btn-primary mx-2 rounded-1">
                                <i class="bi bi-eye"></i> Details
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
